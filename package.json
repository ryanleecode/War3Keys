{
  "name": "war3keys",
  "version": "1.0.2",
  "description": "Warcraft 3 Hotkeys Manager",
  "main": "src/main/main.js",
  "private": true,
  "scripts": {
    "dev": "electron-webpack dev",
    "clean": "rimraf dist",
    "compile": "electron-webpack",
    "dist": "yarn clean && yarn compile && electron-builder",
    "dist:all": "yarn clean && yarn compile && electron-builder --win --linux",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts{,x}",
    "lint:fix": "eslint --fix src/**/*.ts{,x}",
    "codegen": "yarn codegen:server && yarn codegen:client",
    "codegen:server": "graphql-codegen --config codegen-server.yml",
    "codegen:client": "graphql-codegen --config codegen-client.yml"
  },
  "author": "drdgvhbh",
  "license": "MIT",
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**"
    ],
    "coverageDirectory": ".coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "build": {
    "appId": "com.github.drdgvhbh.war3keys",
    "productName": "War3Keys",
    "extraResources": [
      "war3keys.sqlite"
    ]
  },
  "electronWebpack": {
    "title": "War3Keys",
    "main": {
      "sourceDirectory": "src/main",
      "webpackConfig": "webpack.main.additions.js"
    },
    "whiteListedModules": [
      "@material-ui/core",
      "@material-ui/icons",
      "@drdgvhbh/wc3-custom-hotkeys-parser"
    ],
    "renderer": {
      "sourceDirectory": "src/renderer",
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.3",
    "@graphql-codegen/introspection": "1.8.3",
    "@graphql-codegen/typescript": "1.8.3",
    "@graphql-codegen/typescript-operations": "1.8.3",
    "@graphql-codegen/typescript-react-apollo": "1.8.3",
    "@graphql-codegen/typescript-resolvers": "1.8.3",
    "@types/change-case": "^2.3.1",
    "@types/cheerio": "^0.22.14",
    "@types/electron-debug": "^1.1.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/history": "^4.7.0",
    "@types/jest": "^23.3.0",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "electron": "5.0.6",
    "electron-builder": "^21.0.11",
    "electron-webpack": "^2.7.4",
    "electron-webpack-ts": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "fibers": "^4.0.2",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "sass": "^1.3.0",
    "sass-loader": "^8.0.0",
    "spectron": "^3.8.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@apollo/react-components": "^3.1.3",
    "@apollo/react-hoc": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@drdgvhbh/wc3-custom-hotkeys-parser": "^0.1.7",
    "@martin_hotell/rex-tils": "^2.1.1",
    "@material-ui/core": "^4.6.1",
    "@material-ui/icons": "^4.5.1",
    "apollo-cache": "^1.3.2",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-utilities": "^1.3.2",
    "change-case": "^3.1.0",
    "electron-context-menu": "^0.15.1",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "electron-splashscreen": "^1.0.0",
    "fs-jetpack": "^2.1.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.6",
    "graphql-transport-electron": "drdgvhbh/graphql-transport-electron",
    "immer": "^8.0.1",
    "platform-folders": "^0.2.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-event-listener": "^0.6.1",
    "react-redux": "^5.0.7",
    "react-reveal": "^1.2.2",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.5",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.9",
    "sqlite3": "^4.1.0",
    "tslib": "^1.10.0",
    "typeorm": "^0.2.20"
  },
  "files": [
    "*.js",
    "*.ts",
    "dist",
    "node_modules"
  ]
}
